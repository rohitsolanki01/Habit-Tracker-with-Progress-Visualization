{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}
